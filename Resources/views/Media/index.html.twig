<h1>Media list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Filename</th>
            <th>Path</th>
            <th>Type</th>
            <th>Mediaurl</th>
            <th>Size</th>
            <th>Mimetype</th>
            <th>Creator_id</th>
            <th>Created_at</th>
            <th>Updated_at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('media_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.filename }}</td>
            <td>{{ entity.path }}</td>
            <td>{{ entity.type }}</td>
            <td>{{ entity.mediaurl }}</td>
            <td>{{ entity.size }}</td>
            <td>{{ entity.mimetype }}</td>
            <td>{{ entity.creatorid }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('media_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('media_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('media_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
