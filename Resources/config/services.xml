<services>
    <service id="coshi_media.imager" class="Coshi\MediaBundle\Service\Imager">

        <argument>%coshi_media%</argument>
    </service>

    <service
        id="coshi_media.media_manager"
        class="Coshi\MediaBundle\Manager\MediaManager"
        >
        <argument type="service" id="doctrine.orm.default_entity_manager" />
        <argument type="service" id="coshi_media.imager" />
        <argument>%coshi_media%</argument>
        <call method="setKernel">
            <argument type="service" id="kernel" />
        </call>
        <call method="setContainer">
            <argument type="service" id="service_container" />
        </call>
    </service>

    <service
        id="coshi_media.thumbnail_extension"
        class="Coshi\MediaBundle\Templating\ThumbnailExtension"
        >
        <call method="setOptions">
            <argument>%coshi_media%</argument>
        </call>
        <tag name="twig.extension" />
    </service>



</services>
